#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

indent() {
  sed -u 's/^/       /'
}

scriptname=$(basename $0)
case $# in
  2) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR CACHE_DIR" >&2; exit 2;;
esac

build_dir="$1"
cache_dir="$2"
ccache_max_size=50G

export PATH=$build_dir/depot_tools:"$PATH"
export CCACHE_DIR=$cache_dir/ccache
export CC='ccache gcc'
export CXX='ccache g++'
export CC_host="$CC"
export CXX_host="$CXX"

ARCH=${ARCH:-x64}
TARGET=${TARGET:-release}

ccache -M $ccache_max_size
ccache -z

echo "-----> Running gclient hooks"
cd $build_dir >/dev/null 2>&1
gclient runhooks | indent
cd - >/dev/null 2>&1

echo "-----> Building dart"
cd $build_dir/dart >/dev/null 2>&1
tools/build.py -m "$TARGET" -a "$ARCH" create_sdk 2>&1 | indent
cd - >/dev/null 2>&1

echo "-----> Creating dart-sdk.tar.gz"
tar -C dart/out/ReleaseX64 -czvf dart/out/ReleaseX64/dart-sdk.tar.gz dart-sdk
